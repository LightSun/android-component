<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="switch_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
        <item name="android:track">@drawable/selector_switch_track</item>
        <item name="android:thumb">@drawable/selector_switch_thumb</item>
        <item name="android:checked">true</item>
    </style>

    <style name="tv_common">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecond</item>
    </style>

    <style name="tv_common_theme" parent="tv_common">
        <item name="android:textColor">@color/colorTheme</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_common_second" parent="tv_common">
        <item name="android:textColor">@color/colorSecond</item>
    </style>
    <style name="tv_common_submit" parent="tv_common">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_running_submit</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:text">@string/submit</item>
        <item name="android:paddingTop">13sp</item>
        <item name="android:paddingBottom">13sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
